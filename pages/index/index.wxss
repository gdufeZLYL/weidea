/**index.wxss**/

page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    /* background-color: #cdad; */
    position: relative;
}

/*searchbar*/

.searchbar {
    width: 100%;
    background-color: yellow;
    height: 150rpx;
}

/*banner*/

.banner {
    width: 100%;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.banner .banner-img {
    width: 100%;
}

/*option*/

.option {
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.option .op-item {
    width: 25%;
    height: 50%;
    /* border: 1px solid red; */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.option .op-item .op-icon {
    /* height:70%; *//* background-color:blue; */
    /* border: 1px solid blue; */
    width: 60%;
    margin: 0 auto;
}

/*news*/

.news {
    width: 100%;
    display: flex;
    margin-top:50rpx;
}
.news image{
    width:10%;
    margin-left:6%;
}
.news .content{
    width:74%;
    border:1px solid red;
}
/*nav*/

.nav {
    width: 100%;
    height: 100rpx;
    background-color: red;
    bottom: 0rpx;
    position: fixed;
}
