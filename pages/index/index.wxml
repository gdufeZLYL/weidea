<view class="container">
    <view class='searchbar'>
        搜索栏
    </view>

    <view class='banner'>
        <swiper indicator-dots='true' autoplay='true' interval='3000'>
            <swiper-item>
                <image class="banner-img" src='/images/static/house1.jpg'></image>
            </swiper-item>
            <swiper-item>
                <image class="banner-img" src='/images/static/house2.jpg'></image>
            </swiper-item>
            <swiper-item>
                <image class="banner-img" src='/images/static/house3.jpg'></image>
            </swiper-item>
        </swiper>
    </view>
    <view class="option">
        <view class='op-item'>
            <image class="op-icon" src='/images/static/5.png' mode="widthFix"></image>
            <text>整租</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/6.png' mode="widthFix"></image>
            <text>合租</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/apartment.png' mode="widthFix"></image>
            <text>公寓</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/area.png' mode="widthFix"></image>
            <text>小区</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/let.png' mode="widthFix"></image>
            <text>放租</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/rent.png' mode="widthFix"></image>
            <text>估价</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/move.png' mode="widthFix"></image>
            <text>搬家</text>
        </view>
        <view class='op-item'>
            <image class="op-icon" src='/images/static/maintain.png' mode="widthFix"></image>
            <text>维修</text>
        </view>
    </view>
    <view class='news'>
        <image src='/images/static/news.png' mode="widthFix"></image>
        <view class='content'></view>
    </view>
    <view class="nav">

    </view>
